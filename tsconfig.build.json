{
  "compileOnSave": false,
  "buildOnSave": false,
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitHelpers": true,
    "noImplicitAny": false,
    "outDir": "./lib",
    "jsx": "react",
    "removeComments": false,
    "sourceMap": true,
    "sourceRoot": "./src",
    "target": "es6"
  },
  "awesomeTypescriptLoaderOptions": {
    "useBabel": true,
    "useCache": false,
    "emitRequireType": false
  },
  "exclude": ["coverage", "dist", "lib", "node_modules"]
}
